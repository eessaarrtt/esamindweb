// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model EtsyShop {
  id              Int      @id @default(autoincrement())
  name            String
  etsyShopId      String   @unique          // Etsy numeric shop id as string
  accessToken     String
  refreshToken    String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  listings        EtsyListing[]
  orders          Order[]
}

model EtsyListing {
  id              Int      @id @default(autoincrement())
  etsyListingId   String   @unique
  title           String
  productCode     String   // internal code like "3_card", "deep_love", etc.
  shop            EtsyShop @relation(fields: [shopId], references: [id])
  shopId          Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Order {
  id              Int      @id @default(autoincrement())
  etsyReceiptId   String   @unique
  etsyTransactionId String?
  buyerName       String?
  buyerUserId     String?
  personalization String?  // raw text from buyer
  name            String?  // parsed
  age             String?
  question        String?
  productCode     String
  shop            EtsyShop @relation(fields: [shopId], references: [id])
  shopId          Int
  status          OrderStatus @default(PENDING) // PENDING, GENERATED, SENT, ERROR
  readingText     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  GENERATED
  SENT
  ERROR
}

model Shop {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  name        String
  description String
  category    String   // e.g., "Spiritual", "Digital Tools", "Design", etc.
  externalUrl String?  // Link to Etsy or other marketplace
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
